{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@swc/core": "^1.2.237",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "lerna": "^5.3.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . && tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest && lerna run test",
    "e2e": "lerna run e2e",
    "release": "npm run build && lerna publish --conventional-commits"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
