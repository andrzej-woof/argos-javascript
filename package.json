{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@swc/core": "^1.3.8",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "jest": "^29.2.0",
    "lerna": "^6.4.1",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.16",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build",
    "build-docs": "cross-env typedoc",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . && tsc",
    "test": "jest",
    "e2e": "lerna run e2e",
    "release": "npm run build && lerna publish --conventional-commits",
    "release-canary": "npm run build && lerna publish --canary --dist-tag canary"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
