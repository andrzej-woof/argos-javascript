{
  "include": ["./src", "./typings"],
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "ESNext",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./typings", "../../node_modules/@types"]
  }
}
